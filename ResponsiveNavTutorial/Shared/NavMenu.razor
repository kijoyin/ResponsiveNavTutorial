<nav>
    <div class="logo">
        <h4>The Nav</h4>
    </div>
    <ul class="nav-links">
        <li>
            @for (int i = 0; i < NavItems.Count(); i++)
            {
                var menu = NavItems[i];
                @if (i == 0)
                {
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        @menu
                    </NavLink>
                }
                else
                {
                    <NavLink class="nav-link" href="@menu">
                        @menu
                    </NavLink>
                }
            }
        </li>
    </ul>
    <div class="burger">
        <div class="line1"></div>
        <div class="line2"></div>
        <div class="line3"></div>
    </div>
</nav>

@code
{
    [Parameter] public string[] NavItems { get; set; }
}
